\def\churchslavic@shorthands{%
  \bbl@activate{"}%
  \def\language@group{churchslavic}%
%  \declare@shorthand{russian}{"`}{„}%
%  \declare@shorthand{russian}{"'}{“}%
%  \declare@shorthand{russian}{"<}{«}%
%  \declare@shorthand{russian}{">}{»}%
  \declare@shorthand{churchslavic}{""}{\hskip\z@skip}%
  \declare@shorthand{churchslavic}{"~}{\textormath{\leavevmode\hbox{-}}{-}}%
  \declare@shorthand{churchslavic}{"=}{\nobreak-\hskip\z@skip}%
  \declare@shorthand{churchslavic}{"|}{\textormath{\nobreak\discretionary{-}{}{\kern.03em}\allowhyphens}{}}%
  \declare@shorthand{churchslavic}{"-}{%
    \def\churchslavic@sh@tmp{%
      \if\churchslavic@sh@next-\expandafter\churchslavic@sh@emdash
      \else\expandafter\churchslavic@sh@hyphen\fi
    }%
    \futurelet\churchslavic@sh@next\churchslavic@sh@tmp}%
  \def\churchslavic@sh@hyphen{%
    \nobreak\-\bbl@allowhyphens}%
  \def\churchslavic@sh@emdash##1##2{\cdash-##1##2}%
  \def\cdash##1##2##3{\def\tempx@{##3}%
  \def\tempa@{-}\def\tempb@{~}\def\tempc@{*}%
   \ifx\tempx@\tempa@\@Acdash\else
    \ifx\tempx@\tempb@\@Bcdash\else
     \ifx\tempx@\tempc@\@Ccdash\else
      \errmessage{Wrong usage of cdash}\fi\fi\fi}%
  \def\@Acdash{\ifdim\lastskip>\z@\unskip\nobreak\hskip.2em\fi
    \cyrdash\hskip.2em\ignorespaces}%
  \def\@Bcdash{\leavevmode\ifdim\lastskip>\z@\unskip\fi
   \nobreak\cyrdash\penalty\exhyphenpenalty\hskip\z@skip\ignorespaces}%
  \def\@Ccdash{\leavevmode
   \nobreak\cyrdash\nobreak\hskip.35em\ignorespaces}%
  \ifx\cyrdash\undefined
    \def\cyrdash{\hbox to.8em{--\hss--}}
  \fi
  \declare@shorthand{churchslavic}{",}{\nobreak\hskip.2em\ignorespaces}%
}

