% if spelling is set to modern, Russian date and caption
% as well as ASCII digits are used.
\define@key{churchslavic}{spelling}[modern]{%
  \ifstrequal{#1}{traditional}%
    {\def\captionschurchslavic{\captionschurchslavic@traditional}%
     \def\datechurchslavic{\datechurchslavic@traditional}}%
    {\def\captionschurchslavic{\captionschurchslavic@modern}%
     \def\datechurchslavic{\datechurchslavic@modern}}%
}

\newif\ifcyrillic@numerals
\define@key{churchslavic}{numerals}[latin]{%
   \ifstrequal{#1}{cyrillic}%
      {\cyrillic@numeralstrue}
      {\cyrillic@numeralsfalse}%
}

